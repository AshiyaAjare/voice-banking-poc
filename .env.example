# Enrollment Settings
MIN_ENROLLMENT_SAMPLES=3
MAX_ENROLLMENT_SAMPLES=10
ENROLLMENT_TIMEOUT_HOURS=24

# Primary Model (ECAPA-TDNN)
MODEL_SOURCE=speechbrain/spkrec-ecapa-voxceleb

# Secondary Model (X-Vector) for comparison
ENABLE_SECONDARY_MODEL=true
SECONDARY_MODEL_SOURCE=speechbrain/spkrec-xvect-voxceleb

# Speaker Embedding Backend: ecapa (default) | whisper_ecapa
SPEAKER_EMBEDDING_BACKEND=ecapa

# Verification Settings
SIMILARITY_THRESHOLD=0.80

# Audio Validation
VAD_MIN_SPEECH_DURATION_MS=500
VAD_MIN_SPEECH_PERCENTAGE=0.10
VAD_THRESHOLD=0.5
MIN_AUDIO_RMS=0.01

# API Settings
DEBUG=false
